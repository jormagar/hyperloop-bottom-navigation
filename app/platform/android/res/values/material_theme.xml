<?xml version="1.0" encoding="utf-8"?>
<resources>
	<!-- Definimos paleta de colores -->
	<color name="primary_dark">#37525e</color>
	<color name="primary">#476471</color>
	<color name="primary_light">#c8d1d4</color>
	<color name="white">#FFFFFF</color>
	<color name="white_dark">#DFDFDF</color>
	<color name="gray">#7A7A7A</color>
	<color name="gray_dark">#3C3C3C</color>
	<color name="gray_light">#BBBBBB</color>
	<color name="black">#000000</color>

	<!-- Definimos custom ActionBar -->
	<style name="Custom.ActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
		<item name="elevation">0dp</item>
		<item name="android:elevation">0dp</item>
		<item name="android:windowContentOverlay">@null</item>
	</style>

	<!-- Definimos tema de dialogo -->
	<style name="materialDialog" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
		<item name="colorAccent">@color/primary</item>
		<item name="colorControlNormal">@color/gray</item>
		<item name="android:textColorPrimary">@color/primary</item>
		<item name="textColorAlertDialogListItem">@color/primary</item>
	</style>

	<style name="materialTheme.Widget" parent="@style/Theme.AppCompat">
		<item name="android:textColorHint">@color/white</item>
	</style>

	<style name="Theme.Material" parent="@style/Theme.AppCompat">
		<!--Status bar color-->
		<item name="colorPrimaryDark">@color/primary_dark</item>
		<!--Action bar color-->
		<item name="colorPrimary">@color/primary</item>
		<!-- Navigation bar color -->
		<item name="android:navigationBarColor">@color/black</item>
		<!--Status bar color-->
		<item name="android:textColorPrimary">@color/white</item>
		<!-- Es el color de un control cuando no está activo -->
		<item name="colorControlNormal">@color/primary_light</item>
		<!-- Es el color de un control cuando está activo -->
		<item name="colorControlActivated">@color/primary</item>
		<!-- Es el color de un control cuando un usuario pincha en sobre él -->
		<item name="colorControlHighlight">@color/primary_light</item>
		<!-- Es el color del scroll cuando llegamos al final de un scroll -->
		<item name="android:colorEdgeEffect">@color/primary_dark</item>
		<!-- Estilo action bar -->
		<item name="actionBarStyle">@style/Custom.ActionBar</item>
		<!-- Establecemos tema para los dialogos -->
		<item name="alertDialogTheme">@style/materialDialog</item>
		<!-- Establecemos estilos para la barra de búsqueda -->
		<!--<item name="searchViewStyle">@style/materialSearchView</item>-->
		<!-- Establecemos tema para para actionbar -->
		<item name="android:actionBarWidgetTheme">@style/materialTheme.Widget</item>
		<!-- Establecemos color de activity indicator -->
		<item name="android:indeterminateTint">@color/white</item>
		<!-- Establecemos tema para Date Picker -->
		<!--<item name="android:datePickerDialogTheme">@style/materialDatePicker</item>-->
	</style>
	<style name="Theme.NoActionBar" parent="@style/Theme.AppCompat.Translucent.NoTitleBar">
		<!--Status bar color-->
		<item name="colorPrimaryDark">@android:color/transparent</item>
		<!-- Establecemos tema para Date Picker -->
		<!--<item name="android:datePickerDialogTheme">@style/materialDatePicker</item>-->
		<!--<item name="android:datePickerStyle">@style/SpinnerDatePicker</item>-->
	</style>
</resources>
